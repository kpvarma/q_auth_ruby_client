
<div class="login-box p-20">

  <%= image_tag("/assets/logo-grey.png", alt: "Q-Project Logo") %>

  <h2>Sign In</h2>
  <hr>

  <%= form_tag create_session_path, :role=>"form" do %>

    <div id="div_flash_message">
      <%#= render :partial=>"/layouts/poodle/common/flash_message" -%>
    </div>

    <div class="form-group mt-10">
      <label for="exampleInputEmail1">Email address</label>
      <%= text_field_tag :login_handle, params[:login_handle], :placeholder=> "Email", :name => "login_handle", :class=>"form-control"%>
    </div>

    <div class="form-group">
      <label for="exampleInputPassword1">Password</label>
      <%= password_field_tag :login_password, '', :placeholder=> "Password", :name => "login_password", :class=>"form-control"%>
    </div>

    <%= submit_tag "Sign in", :class => "btn btn-primary pull-right" %>
    <div class="cl-10"></div>

  <% end %>



</div>


